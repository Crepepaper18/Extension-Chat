{
    "name": "Chat",
    "version": "0.1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["http://localhost:9000/*"],
    "web_accessible_resources": [
        {
            "resources": ["socket.io.min.js", "index.html", "style.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "permissions": ["activeTab", "scripting"]
}
